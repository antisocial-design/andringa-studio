{% extends "general.twig" %}

{% block content %}

	<div class="container mb-8 1024:mb-40 mt-18">
		<div class="grid grid-cols-2 mb-16 1024:mb-32">
			<div class="col-span-2 text-container">
				<h1 class="text-dark font-bold">{{post.title}}
					{{post.city ? ',<br>' ~ post.city : ''}}
				</h1>
			</div>
		</div>
		<article class="col-span-1 portfolio_content text-dark">
			{{post.content}}
		</article>
	</div>

	<div class="container my:16 1024:my-52">

		<div class="grid 1024:grid-cols-5 gap-8 mb-20 1024:border-t border-dark 1024:pt-32">

			<div class="1024:col-span-2">
				<div class="section-image aspect-[16/4] image-container text-center">
					<a class="w-full flex" href="{{ post.prev.link }}">
						<h4 class="text text-sand m-auto">
							previous
							{% if post.type == 'work' %}
								project
							{% else %}
								article
							{% endif %}
						</h4>
					</a>
				</div>
			</div>

			<div class="1024:col-span-1 text-container">

				<div class="grid grid-cols-1 1024:grid-cols-2 h-full">
					<div class="col-span-1 border-t 1024:border-t-0 1024:border-r border-dark h-full"></div>

				</div>
			</div>

			<div class="1024:col-span-2">

				<div class="section-image aspect-[16/4] image-container text-center">
					<a class="w-full flex" href="{{ post.next.link }}">
						<h4 class="text text-sand m-auto">
							next
							{% if post.type == 'work' %}
								project
							{% else %}
								article
							{% endif %}

						</h4>
					</a>
				</div>
			</div>

		</div>


	</div>


{% endblock %}
