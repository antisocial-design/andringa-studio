<meta property="og:url" content="{{post.link}}">

{% if tagGA is defined %}
	<!-- Google tag (gtag.js) -->
	<script async src="https://www.googletagmanager.com/gtag/js?id={{tagGA}}"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
function gtag() {
dataLayer.push(arguments);
}
gtag('js', new Date());

gtag('config', '{{ tagGA }}');
	</script>
{% endif %}
