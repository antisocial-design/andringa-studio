{% if customTitle is defined %}
	{% set pageTitle = customTitle %}
{% else %}
	{% set pageTitle = post.title %}
{% endif %}

{# {% set tagGA = 'G-BEY70D8TVM' %} #}

<meta property="og:type" content="website"/>
<meta name="twitter:card" content="summary">

<title>{{ pageTitle }}
	—
	{{ site.name }}</title>
<meta property="og:title" content="{{ pageTitle }} — {{ site.name }}">
<meta
name="twitter:title" content="{{ pageTitle }} — {{ site.name }}">

