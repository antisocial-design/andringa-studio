<div class="header bg-white w-full z-20 relative">
	<div class="container py-12">
		<div class="grid grid-cols-2">
			<div class="col-span-1 text-container flex">
				<a class="my-auto" href="{{site.url}}"><img style="min-width:120px;max-width:200px" src="{{theme.link}}/assets/imgs/logo.svg"></a>
			</div>


			<div class="col-span-1 flex">
				<div class="text-right my-auto ml-auto gap-12 hidden 1024:flex">
					{% for item in main_menu.get_items %}
						<a class="main menu-item uppercase hover:font-bold" href="{{ item.link }}">
							<h6>{{item.title}}</h6>
						</a>
					{% endfor %}
					<div class="vertical-sep border-r border-dark"></div>
					{% include 'includes/language-selector.twig' %}
				</div>
				<div class="text-right ml-auto my-auto 1024:hidden text-container">
					<div class="hamburger" id="hamburger-1">
						<span class="line"></span>
						<span class="line"></span>
						<span class="line"></span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="mobile-menu z-10 bg-white py-44">
	<div class="grid grid-cols-1">
		<div class="col-span-1">
			<div class="text-container text-right">
				{% for item in main_menu.get_items %}
					<a class="main menu-item hover:font-bold" href="{{ item.link }}">
						<h4>{{item.title}}</h4>
					</a>
				{% endfor %}

			</div>
		</div>
		<div class="col-span-1 text-container mt-10">
			<div class="lang-selector">{% include 'includes/language-selector.twig' %}</div>
			<div class="socials"></div>


		</div>
	</div>


</div>
