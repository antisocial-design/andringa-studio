{% extends "general.twig" %}

{% block content %}

	<div id="hero" class="mb-48">

		<div class="image-container aspect-[16/7]">
			<img src="{{Image(post.image).src}}" alt="{{item.project.title}}">
		</div>

	</div>

	<div class="container">

		<div class="filter_wraper mb-28 text-center flex justify-center gap-14 w-full">
			{% for term in category %}
				<span class="filter-btn" data-cat="{{term.ID}}">
					<h4>{{term.name}}</h4>
				</span>
			{% endfor %}
		</div>

		<div class="columns-2 1024:columns-3 1024:gap-16" id="post-list">
			{% for project in portfolio %}
				{% include 'loop/masonry.twig' %}
			{% endfor %}
		</div>
	</div>

	<div class="mb-52"></div>


{% endblock %}
